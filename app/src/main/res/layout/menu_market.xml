<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFF">

    <!-- 스크롤 바를 위한 공간 확보용 paddingRight="5px" 주목 -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Conshop & MENU -->
        <LinearLayout
            android:id="@+id/menu_conshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conshop"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/Txt_Market_Best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베스트"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/Txt_Market_Home"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/Txt_Market_Health"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="헬스"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/Txt_Market_Outdoor"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아웃도어"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <!-- 프로모션 이미지 -->
        <LinearLayout
            android:id="@+id/promo_img"
            android:layout_below="@+id/menu_conshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:src="@drawable/promotion_img" />
        </LinearLayout>

        <!-- Hot Item -->
        <LinearLayout
            android:id="@+id/hot_item"
            android:layout_below="@+id/promo_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Item"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <!-- 상품 이미지 -->
        <LinearLayout
            android:id="@+id/goods_img"
            android:layout_below="@+id/hot_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:src="@drawable/goods_img"/>
        </LinearLayout>

        <!-- Hot News  -->
        <LinearLayout
            android:id="@+id/hot_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_img"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="left"
                android:text="Hot News"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <!-- News Contents -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="[속보] 이찬주씨, 사실은 여자 아이돌을 많이 좋아해...충격"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="[신상] 삼성, 갤럭시8 공개"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="[시사] 나는 이 시간에 안자고 무엇을 하는가"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="[대학생활] 안암 공업 전문학교로 당신을 초대합니다!"
                android:textSize="15dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>


