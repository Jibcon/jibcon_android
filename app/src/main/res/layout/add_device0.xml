<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp"
    android:background="#FFF">

    <RelativeLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ImgView_Adddevice0_1"
            android:background="@drawable/default_user"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_below="@id/ImgView_Adddevice0_1"
            android:text="제품 선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/ImgView_Adddevice0_2"
            android:background="@drawable/default_user"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ImgView_Adddevice0_2"
            android:text="폰  와이파이"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ImgView_Adddevice0_3"

            android:background="@drawable/default_user"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="완료"
            android:layout_below="@id/ImgView_Adddevice0_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/Txt_adddevice0_0"
            android:gravity="center"
            android:text="제품 선택"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_below="@id/Txt_adddevice0_0"
            android:id="@+id/Spinner_adddevice0_1"
            android:layout_width="match_parent"
            android:background="@color/cardview_dark_background"
            android:layout_height="wrap_content"></Spinner>
        <Spinner
            android:background="@color/cardview_dark_background"
            android:layout_below="@id/Spinner_adddevice0_1"
            android:id="@+id/Spinner_adddevice0_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/Txt_adddevice0_1"
            android:gravity="center"
            android:text="1. 제품 별 다른 설명"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/Txt_adddevice0_1"
            android:id="@+id/Txt_adddevice0_2"
            android:gravity="center"
            android:text="2. 제품 별 다른 설명"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Btn_addDevice0"
            android:text="다음"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>