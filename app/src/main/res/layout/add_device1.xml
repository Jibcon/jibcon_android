<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ImgView_Adddevice2_1"
            android:background="@drawable/default_user"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_below="@id/ImgView_Adddevice2_1"
            android:text="제품 선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/ImgView_Adddevice2_2"
            android:background="@drawable/default_user"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ImgView_Adddevice2_2"
            android:text="폰  와이파이"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ImgView_Adddevice2_3"

            android:background="@drawable/default_user"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="완료"
            android:layout_below="@id/ImgView_Adddevice2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout

        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:text="다음"
            android:id="@+id/Btn_addDevice1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Txt_adddevice1_1"
            android:gravity="center"
            android:text="가정 내 와이파이를 선택해 주세요"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/ListView_adddevice1"
            android:layout_below="@id/Txt_adddevice1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/Btn_addDevice1"
            >

        </ListView>

    </RelativeLayout>

</LinearLayout>