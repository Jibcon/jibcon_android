<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Btn_MakeCon1_0"
            android:layout_gravity="left"
            android:text="이전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt1"
            android:gravity="center"
            android:text="집 이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/txt2"
            android:text="집 이름을 지어주세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_below="@id/txt2"
            android:hint="개미지옥"
            android:id="@+id/EditTxt_makecon1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt3"
            android:layout_below="@id/EditTxt_makecon1_1"
            android:text="사용자의 이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/EditTxt_makecon1_2"
            android:hint="유현호"
            android:layout_below="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="집 소개(20글자)"
            android:layout_below="@id/EditTxt_makecon1_2"
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="집소개~~"
            android:layout_below="@id/txt4"
            android:id="@+id/EditTxt_makecon1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Btn_makeCon1_1"
            android:text="다음"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>