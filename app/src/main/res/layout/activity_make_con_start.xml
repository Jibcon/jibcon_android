<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_con_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.example.admin.jipcon2.MakeCon.MakeConStartActivity">

    <Button
        android:text="SKIP"
        android:layout_gravity="right"
        android:id="@+id/Btn_MakeConStart_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="환영합니다"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:paddingTop="16dp"
        android:layout_gravity="center"
        android:src="@drawable/default_user"
        android:layout_width="280dp"
        android:layout_height="280dp" />
    <TextView
        android:paddingTop="16dp"
        android:gravity="center"
        android:text="'나의 집콘 만들기'를 통해 \n새롭게 집콘을 시작하실 수 있어요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="16dp"
        android:gravity="center"
        android:text="'다른 집콘 초대받기'를 통해 가족들이 \n 사용하는 집콘을 같이 쓸 수도 있답니다"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Btn_makeMyCon"
        android:text="나의 집콘 만들기"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/Btn_getOtherCon"
        android:text="다른 집콘 초대받기"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
