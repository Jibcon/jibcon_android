<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sm_arts.jibcon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name="com.sm_arts.jibcon.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/jibcon_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
        <activity
            android:name="com.sm_arts.jibcon.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sm_arts.jibcon.Splash.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sm_arts.jibcon.Splash.TutorialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sm_arts.jibcon.Login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sm_arts.jibcon.MakeCon.MakeConStartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sm_arts.jibcon.MakeCon.MakeCon0"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.sm_arts.jibcon.Device.AddDevice.AddDeviceActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>