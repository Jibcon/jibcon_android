<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pr_trigger_specific_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="pr_trigger_specific" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/pr_trigger_specific_time_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:entries="@array/spinner_time"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/pr_trigger_specific_ampm_spinner"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:entries="@array/spinner_ampm"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/pr_trigger_specific_tomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>