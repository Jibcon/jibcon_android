<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pr_trigger_specific_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textSize="24dp"
        android:text="시간설정" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="16dp"
        android:text="세부정보인\n시간을입력해주세요"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/pr_trigger_specific_time_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:entries="@array/spinner_time"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/pr_trigger_specific_ampm_spinner"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:entries="@array/spinner_ampm"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/pr_trigger_specific_tomain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:text=" OK " />

</LinearLayout>