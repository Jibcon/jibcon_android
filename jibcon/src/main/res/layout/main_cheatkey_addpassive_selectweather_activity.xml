<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sm_arts.jibcon.ui.main.cheatkey.passive.addpassive.action.SelectActionWeatherActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_select_weather"
        style="@style/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_cheatket_addpassive_addweatheraction"
            style="@style/setting_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="날씨 액션 등록" />
    </android.support.v7.widget.Toolbar>

    <com.google.android.gms.maps.MapView
        android:id="@+id/cheatkey_addpassive_wehatermap_mapview"
        android:name="com.google.android.gms.maps.Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cheatkey_addpassive_start_place_select"
        android:layout_below="@id/toolbar_select_weather"
       ></com.google.android.gms.maps.MapView>
    <Button
        android:textColor="@color/white"
        android:background="@color/deep_blue"
        android:text="장소 선택"
        android:layout_above="@+id/tv_cheatkey_addpassive_weatheraction"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_cheatkey_addpassive_start_place_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@color/white"
        android:background="@color/deep_blue"
        android:text="확인"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_selectweather_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="16dp"
        android:textSize="16sp"
        android:id="@+id/tv_cheatkey_addpassive_weatheraction"
        android:layout_above="@id/btn_selectweather_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
