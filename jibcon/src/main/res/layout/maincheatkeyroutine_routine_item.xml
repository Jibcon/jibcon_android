<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="routineitemviewmodel"
            type="com.sm_arts.jibcon.ui.main.cheatkey.passive.adapter.viewholder.RoutineItemViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top">

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:onClick="@{routineitemviewmodel::onLayoutClicked}"
            android:padding="16dp"
            card:cardCornerRadius="9dp"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.title}"
                    tools:text="title"
                    card:layout_constraintTop_toTopOf="parent"
                    card:layout_constraintLeft_toLeftOf="parent"
                    card:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="0dp"
                    />

                <TextView
                    android:id="@+id/tv_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.sensor}"
                    tools:text="sensor"
                    card:layout_constraintLeft_toLeftOf="parent"
                    card:layout_constraintRight_toLeftOf="@+id/tv_sensor_container"
                    card:layout_constraintTop_toBottomOf="@+id/tv_title"
                    android:layout_marginTop="24dp"
                    />

                <TextView
                    android:id="@+id/tv_sensor_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.sensorCnt}"
                    tools:text="sensorcontainer"
                    card:layout_constraintLeft_toRightOf="@+id/tv_sensor"
                    card:layout_constraintRight_toLeftOf="@+id/tv_sensor_postfix"
                    card:layout_constraintTop_toTopOf="@+id/tv_sensor"
                    />

                <TextView
                    android:id="@+id/tv_sensor_postfix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mSensorPrefix}"
                    tools:text="sensorcontainer"
                    card:layout_constraintLeft_toRightOf="@+id/tv_sensor_container"
                    card:layout_constraintRight_toRightOf="parent"
                    card:layout_constraintTop_toTopOf="@+id/tv_sensor"
                    />


                <TextView
                    android:id="@+id/tv_condition_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.value}"
                    tools:text="conditionvalue"
                    card:layout_constraintLeft_toLeftOf="parent"
                    card:layout_constraintRight_toLeftOf="@+id/tv_condition_method"
                    android:layout_marginTop="16dp"
                    card:layout_constraintTop_toBottomOf="@+id/tv_sensor"
                    />

                <TextView
                    android:id="@+id/tv_condition_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.conditionMethod}"
                    tools:text="conditionmethod"
                    card:layout_constraintTop_toTopOf="@+id/tv_condition_value"
                    card:layout_constraintLeft_toRightOf="@+id/tv_condition_value"
                    card:layout_constraintRight_toRightOf="parent"
                    />


                <TextView
                    android:id="@+id/tv_actuator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.actuator}"
                    tools:text="actuator"
                    card:layout_constraintTop_toBottomOf="@+id/tv_condition_value"
                    card:layout_constraintLeft_toLeftOf="parent"
                    card:layout_constraintRight_toLeftOf="@+id/tv_actuator_container"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:id="@+id/tv_actuator_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.actuatorCnt}"
                    tools:text="actuator_container"
                    card:layout_constraintTop_toTopOf="@+id/tv_actuator"
                    card:layout_constraintLeft_toRightOf="@+id/tv_actuator"
                    card:layout_constraintRight_toLeftOf="@+id/tv_actuator_action"
                    />

                <TextView
                    android:id="@+id/tv_actuator_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{routineitemviewmodel.mRoutine.action}"
                    tools:text="actuator_aciton"
                    card:layout_constraintTop_toTopOf="@+id/tv_actuator"
                    card:layout_constraintLeft_toRightOf="@+id/tv_actuator_container"
                    card:layout_constraintRight_toRightOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
