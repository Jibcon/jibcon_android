<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="wifiitemviewmodel"
            type="com.sm_arts.jibcon.ui.adddevice.wifi.adapter.viewholder.WifiItemViewModel"/>
    </data>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_ssid"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="4"
            tools:text="SSID"
            android:text="@{wifiitemviewmodel.mSsid}" />
        <TextView
            android:id="@+id/tv_bandwidth"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1"
            tools:text="2.4Ghz"
            android:text="@{wifiitemviewmodel.mBandwidth}" />

        <ImageView
            android:id="@+id/iv_wifitype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@{wifiitemviewmodel.mSecureSrc}"
            />

    </LinearLayout>
</layout>