<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/main_mainactivity_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/sidebar_null_layout_profile">
        <!--  app:menu="@menu/activity_main_drawer" -->

        <ImageButton
            android:id="@+id/Btn_Setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:src="@drawable/invalid_name" />

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/nav_view"
            android:layout_marginTop="125dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="610dp"
                android:layout_below="@+id/nav_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="5dp"
                    android:background="#f6f6f6" />

                <TextView

                    android:layout_width="275dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="16dp"
                    android:text="MY JIBCON"
                    android:textColor="#419bf9"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="0.5dp"
                    android:background="#d1d1d1" />

                <TextView
                    android:id="@+id/Sidebar_myjibcon"
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="17.5dp"
                    android:text="나의 집콘"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Sidebar_userAuthority"
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="사용자 권한"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Sidebar_connectedDevices"
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="연결된 디바이스"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Sidebar_widget"
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="위젯"
                    android:textColor="#747474"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/Sidebar_aboutJibcon"
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="About 집콘"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="42dp"
                    android:text="MY CONSHOP"
                    android:textColor="#419bf9"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="275dp"
                    android:layout_height="0.5dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="17.5dp"
                        android:text="포인트"
                        android:textColor="#747474"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="133dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="17.5dp"
                        android:text="6,433P "
                        android:textColor="#747474"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="장바구니"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="주문배송"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="최근 본 상품"
                    android:textColor="#747474"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="상품 Q/A"
                    android:textColor="#747474"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="275dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="27dp"
                    android:text="나의 리뷰"
                    android:textColor="#747474"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="43dp"
                        android:layout_gravity="end"
                        android:background="#419bf9"
                        android:text="정보수정"
                        android:textColor="#FFFFFF" />


                    <Button
                        android:layout_width="150dp"
                        android:layout_height="43dp"
                        android:layout_gravity="end"
                        android:background="#419bf9"
                        android:text="로그아웃"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
