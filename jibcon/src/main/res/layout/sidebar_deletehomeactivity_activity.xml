<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        style="@style/toolbar_common"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/sidebar_back"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/sidebar_back" />

        <TextView
            style="@style/setting_head"
            android:textSize="17sp"
            android:textColor="#4a4a4a"
            android:text="집 삭제" />

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5.2dp"
        android:background="#2ee9e9e9"
        />

    <ListView
        android:listSelector="@color/wallet_holo_blue_light"
        android:id="@+id/delete_my_jibcon"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:background="#fcfcfc"
        android:duplicateParentState="true"
        android:gravity="center_horizontal"
        android:textColor="@color/color_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2ee9e9e9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="17dp"
            android:lineSpacingExtra="5sp"
            android:text="콘샵을 탈퇴하시는 이유를 선택해주세요."
            android:textColor="#757575"
            android:textSize="11sp" />

    </LinearLayout>



</LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#419bf9"
        android:text="집 삭제하기"
        android:textColor="#FFFFFF" />
</RelativeLayout>