<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_adddevice_addphilips"
        style="@style/toolbar_common"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        >

        <TextView
            style="@style/setting_head"
            android:text="Philips Hue"
            />

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/listview_adddevice_addphilips"
        android:layout_above="@+id/tv_adddevice_addphilips"
        android:layout_below="@id/toolbar_adddevice_addphilips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:padding="20dp"
        android:id="@+id/tv_adddevice_addphilips"
        android:text="연동할 전구를 선택해 주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_adddevice_addphilips_ok"
        android:layout_alignParentStart="true"
        />

    <Button
        android:clickable="false"
        android:id="@id/btn_adddevice_addphilips_ok"
        android:layout_width="@dimen/splashmakecon_button_width"
        android:layout_height="@dimen/splashmakecon_button_height"
        android:layout_marginBottom="@dimen/splashmakecon_button_marginBottom"
        android:gravity="center"
        android:text="확 인"
        android:textColor="@color/white"
        android:textSize="@dimen/splashmakecon_button_text_size"
        android:background="@drawable/corner_round2_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
