<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_adddevice_addphilips"
        style="@style/toolbar_common"
        app:popupTheme="@style/AppTheme.PopupOverlay">



        <TextView
            style="@style/setting_head"
            android:text=" 필립스 휴 "/>

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/listview_adddevice_addphilips"
        android:layout_above="@+id/tv_adddevice_addphilips"
        android:layout_below="@id/toolbar_adddevice_addphilips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <TextView
        android:padding="20dp"
        android:id="@+id/tv_adddevice_addphilips"
        android:text="연동할 전구를 선택해 주세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_adddevice_addphilips_ok"
        android:layout_alignParentStart="true" />
    <Button
        android:clickable="false"
        android:id="@id/btn_adddevice_addphilips_ok"
        android:gravity="center"
        android:text="확인"
        android:textColor="@color/white"
        android:background="@color/deep_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
