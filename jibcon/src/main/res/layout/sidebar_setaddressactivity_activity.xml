<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        style="@style/toolbar_common"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/siderbar_setaddressactivity_sidebarback"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/sidebar_back" />

        <TextView
            style="@style/setting_head"
            android:textSize="17sp"
            android:textColor="#4a4a4a"
            android:text="주소설정 " />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f6f6f6"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="9.8dp"
        android:background="#2ee9e9e9"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d1d1d1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#d1d1d1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/setaddress_addressnum"
                android:layout_width="210dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginLeft="31dp"
                android:textColor="#646464"
                android:textSize="13sp"
                android:text="번지" />

            <Button
                android:id="@+id/setaddress_search_button"
                android:layout_width="85dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:background="#419bf9"
                android:textSize="13sp"
                android:text="주소검색" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/setaddress_addressnum2"
                android:layout_width="297.3dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginLeft="31dp"
                android:text="주소"
                android:textColor="#646464"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/setaddress_addressnum3"
                android:layout_width="297.3dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginLeft="31dp"
                android:textSize="13sp"
                android:textColor="#646464"
                android:text="건물명" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#d1d1d1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#2ee9e9e9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="17dp"
            android:lineSpacingExtra="5sp"
            android:text="현재 우리집의 위치를 설정합니다. 현재 설정한 위치는 이후 정보수정에서 수정이 가능합니다. "
            android:textColor="#757575"
            android:textSize="11sp"
            android:layout_weight="0.52" />

    </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/button3"
        android:layout_below="@+id/textView4"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#419bf9"
        android:layout_alignParentBottom="true"
        android:text="확 인"
        android:textColor="#FFFFFF" />
</RelativeLayout>