<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pr_action_select_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="액션 선택"
        style="@style/setting_head"
        />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pr_action_select_popular"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Popular"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_pr_action_select_popular_time"
                    android:layout_width="90dp"
                    android:layout_height="32dp"

                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"

                    android:background="@color/white"
                    android:text="날씨"
                    android:textSize="17dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pr_action_select_allservice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="All services"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_pr_action_select_all_time"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:text="날씨"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_pr_action_select_wellupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="50dp"
                    android:text="We'll update other action options"
                    android:textSize="12dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_selectaction_ok"
        android:layout_width="@dimen/splashmakecon_button_width"
        android:layout_height="@dimen/splashmakecon_button_height"
        android:text="확 인"
        android:textSize="@dimen/splashmakecon_button_text_size"
        android:textColor="@color/white"
        android:background="@drawable/corner_round2_btn"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/splashmakecon_button_marginBottom"
        />

</LinearLayout>