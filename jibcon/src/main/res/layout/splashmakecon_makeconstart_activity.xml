<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_con_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".ui.splash.makecon.MakeconStartActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5">

        <ImageButton
            android:id="@+id/makeconstart_skip"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_gravity="center"
            android:src="@drawable/jibcon_logo"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:scaleType="centerInside"
            android:background="#00ff0000"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="처음이신가요?"
            android:textSize="16dp"
            android:textColor="@color/default_text_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0.5">

        <Button
            android:id="@+id/Btn_makeMyCon"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/corner_round2_btn"
            android:text="나의 집콘 만들기"
            android:textSize="@dimen/splashmakecon_button_text_size"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:text="새로운 집콘을 시작할 수 있어요"
            android:textSize="16dp"
            android:textColor="@color/default_text_color"/>


    </LinearLayout>

</LinearLayout>
